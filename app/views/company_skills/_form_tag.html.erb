<% if (defined?(name)).nil? %>

	<%= form_tag company_skill_new_api_path do %>
	  <%= hidden_field_tag :category_id, category_id %>
	  <%= label_tag :name %>
	  <%= text_field_tag :name %>

	  <%= submit_tag "Sign in", class: "btn btn-large btn-primary" %>
	<% end %>

<% else %>

	<%= form_tag company_skill_update_api_path do %>
	  <%= hidden_field_tag :id, id %>

	  <%= label_tag :name %>
	  <%= text_field_tag :name, name %>

	  <%= submit_tag "Sign in", class: "btn btn-large btn-primary" %>
	<% end %>

<% end %>


