<% if (defined?(name)).nil? %>

	<%= form_tag category_new_api_path do %>
	  <%= hidden_field_tag :division_id, division_id %>
	  <%= label_tag :name %>
	  <%= text_field_tag :name %>

	  <%= submit_tag "Sign in", class: "btn btn-large btn-primary" %>
	<% end %>

<% else %>
	<%= form_tag category_update_api_path do %>
	  <%= hidden_field_tag :id, id %>
	  <%= label_tag :name %>
	  <%= text_field_tag :name, name %>

	  <%= submit_tag "Sign in", class: "btn btn-large btn-primary" %>
	<% end %>
<% end %>